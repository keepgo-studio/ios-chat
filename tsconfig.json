{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES6", 
    "module": "ES6",

    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,      
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "baseUrl": ".",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-unknown-tag-name": "warning",
          "no-unknown-event": "warning",
          "no-missing-import": "off"
        }
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}